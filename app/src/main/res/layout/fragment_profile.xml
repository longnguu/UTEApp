<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.ProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:id="@+id/scrollViewProfile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.main.ProfileFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/inf_fragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="20dp"
                android:paddingBottom="20dp">
                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Account Settings"
                    />
                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="5dp"
                    android:background="?android:attr/listDivider" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:id="@+id/frpr_Profile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:drawableStart="@drawable/icon_person"
                        android:drawableEnd="@drawable/icon_next"
                        android:gravity="center_vertical"
                        android:text="    Profile"
                        android:textSize="15dp"
                        android:textStyle="bold"></TextView>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="30dp">

                    <TextView
                        android:id="@+id/frpr_QRCode"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:drawableStart="@drawable/icon_qrscan"
                        android:drawableEnd="@drawable/icon_next"
                        android:gravity="center_vertical"
                        android:text="    My QR Code"
                        android:textSize="15dp"
                        android:textStyle="bold"></TextView>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:id="@+id/frpr_analytics"
                        android:drawableStart="@drawable/icon_phone"
                        android:drawableEnd="@drawable/icon_next"
                        android:gravity="center_vertical"
                        android:text="    Analytics"
                        android:textSize="15dp"
                        android:textStyle="bold"></TextView>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/frpr_payment"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:drawableStart="@drawable/icon_payment"
                        android:drawableEnd="@drawable/icon_next"
                        android:gravity="center_vertical"
                        android:text="    Payment"
                        android:textSize="15dp"
                        android:textStyle="bold"></TextView>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/frpr_mywallet"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:drawableStart="@drawable/icon_wallet"
                        android:drawableEnd="@drawable/icon_next"
                        android:gravity="center_vertical"
                        android:text="    My Wallet"
                        android:textSize="15dp"
                        android:textStyle="bold"></TextView>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/frpr_mycommwallet"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:drawableStart="@drawable/icon_wallet"
                        android:drawableEnd="@drawable/icon_next"
                        android:gravity="center_vertical"
                        android:text="    My Community Wallet"
                        android:textSize="15dp"
                        android:textStyle="bold"></TextView>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:id="@+id/frpr_storeinfor"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:drawableStart="@drawable/icon_store"
                        android:drawableEnd="@drawable/icon_next"
                        android:gravity="center_vertical"
                        android:text="    Store Infor"
                        android:textSize="15dp"
                        android:textStyle="bold"></TextView>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/frpr_dkmem"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Security Settings"
                        />
                    <View
                        android:id="@+id/divider1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="5dp"
                        android:background="?android:attr/listDivider" />
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:id="@+id/frpr_passreset"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:drawableStart="@drawable/icon_passreset"
                            android:drawableEnd="@drawable/icon_next"
                            android:gravity="center_vertical"
                            android:text="    Password reset"
                            android:textSize="15dp"
                            android:textStyle="bold"></TextView>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:id="@+id/frpr_facepin"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:drawableStart="@drawable/icon_pin"
                            android:drawableEnd="@drawable/icon_next"
                            android:gravity="center_vertical"
                            android:text="    Face ID and PIN"
                            android:textSize="15dp"
                            android:textStyle="bold"></TextView>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="App Settings"
                        />
                    <View
                        android:id="@+id/divider2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="5dp"
                        android:background="?android:attr/listDivider" />
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:id="@+id/frpr_notify"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:drawableStart="@drawable/icon_notify"
                            android:drawableEnd="@drawable/icon_next"
                            android:gravity="center_vertical"
                            android:text="    Notifycations"
                            android:textSize="15dp"
                            android:textStyle="bold"></TextView>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="General"
                        />
                    <View
                        android:id="@+id/divider3"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_margin="5dp"
                        android:background="?android:attr/listDivider" />
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:id="@+id/frpr_general1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:drawableStart="@drawable/icon_warning"
                            android:drawableEnd="@drawable/icon_next"
                            android:gravity="center_vertical"
                            android:text="    Privacity Notice"
                            android:textSize="15dp"
                            android:textStyle="bold"></TextView>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:id="@+id/frpr_general2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:drawableStart="@drawable/icon_warning"
                            android:drawableEnd="@drawable/icon_next"
                            android:gravity="center_vertical"
                            android:text="    Comunity Rules"
                            android:textSize="15dp"
                            android:textStyle="bold"></TextView>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="30dp"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:id="@+id/frpr_general3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:drawableStart="@drawable/icon_warning"
                            android:drawableEnd="@drawable/icon_next"
                            android:gravity="center_vertical"
                            android:text="    Help &amp; Feedback"
                            android:textSize="15dp"
                            android:textStyle="bold"></TextView>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</FrameLayout>