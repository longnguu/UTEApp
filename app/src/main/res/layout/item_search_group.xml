<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:layout_margin="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/avtNhom"
                android:layout_width="100dp"
                android:layout_height="100dp"/>
            <RelativeLayout
                android:layout_toEndOf="@+id/avtNhom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tenNhom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:gravity="left"
                    android:layout_marginLeft="10dp"
                    android:text="TÊN NHÓM"
                    android:textColor="@color/black"
                    android:textSize="20sp">
                </TextView>
                <TextView
                    android:id="@+id/soThanhVien"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@+id/tenNhom"
                    android:text="1 thành viên"
                    android:textSize="10sp"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/NhomMota"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:layout_marginLeft="10dp"
                    android:layout_below="@+id/soThanhVien"
                    android:text="24.990.000"
                    android:textSize="10sp"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/btnJoin"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/NhomMota"
                    android:layout_marginTop="5dp"
                    android:padding="5dp"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"
                    android:textColor="#009147"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/backgroun_btn"
                    android:text="Tham gia" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>